<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Supermercado
            </NavLink>
        </div>
         <div class="nav-item px-3">
            <NavLink class="nav-link" href="/produtos" Match="NavLinkMatch.All">
                <span class="oi oi-cart"></span> Produtos
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/notas" Match="NavLinkMatch.All">
                <span class="oi oi-dollar"></span> Nota
            </NavLink>
        </div>
          <div class="nav-item px-3">
            <NavLink class="nav-link" href="/cadastrar-lista" Match="NavLinkMatch.All">
                <span class="oi oi-list"></span> Analisar Lista
            </NavLink>
        </div>
	</nav>
</div>

@code {
	private bool collapseNavMenu = true;

	private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
